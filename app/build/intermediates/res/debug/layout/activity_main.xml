<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="alysson.br.graficosarduino.MainActivity"
    >



        <TextView

            android:id="@+id/tvNomeDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tvNomeDevice"
            />


        <WebView
            android:id="@+id/wvGraph"
            android:layout_width="fill_parent"
            android:layout_height="12dp"
            android:layout_above="@+id/linearLayout"
            android:layout_below="@+id/tvNomeDevice" />

    <LinearLayout
        style="?android:attr/buttonBarButtonStyle"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <Button
            style="?attr/buttonBarButtonStyle"
            android:id="@+id/btSearchD"
            android:enabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btConnect"
            />

        <Button
            style="?attr/buttonBarButtonStyle"
            android:id="@+id/btReconnect"
            android:enabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btReconnect"
            />

    </LinearLayout>





    </RelativeLayout><!-- From: file:/C:/Users/Alysson/Desktop/DatASyMCER/app/src/main/res/layout/activity_main.xml -->